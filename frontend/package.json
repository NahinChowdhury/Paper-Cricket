{
	"name": "paper-cricket-frontend",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@types/uuid": "^9.0.0",
		"lottie-react": "^2.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.8.0",
		"socket.io-client": "^4.7.2",
		"typescript": "^4.9.0",
		"uuid": "^9.0.0",
		"web-vitals": "^3.0.0"
	},
	"scripts": {
		"prettier:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
		"prettier:write": "prettier --write \"src/**/*.{ts,tsx,json}\"",
		"prettier:auto": "npm run prettier:check || npm run prettier:write",
		"format": "npm run prettier:write",
		"dev": "npm run prettier:auto && vite",
		"start": "serve -s dist",
		"build": "npm run prettier:auto && vite build",
		"preview": "vite preview"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/node": "^24.8.0",
		"@vitejs/plugin-react": "^5.0.4",
		"prettier": "^3.6.2",
		"serve": "^14.2.5",
		"vite": "^7.1.10"
	}
}
